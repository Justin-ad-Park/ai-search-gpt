{
  "settings": {
    "number_of_shards": 1,
    "number_of_replicas": 0,
    "analysis": {
      "tokenizer": {
        "ko_nori_userdict_tokenizer": {
          "type": "nori_tokenizer",
          "decompound_mode": "mixed",
          "user_dictionary": "analysis/user_dict_ko.txt"
        }
      },
      "filter": {
        "ko_pos_filter": {
          "type": "nori_part_of_speech",
          "stoptags": [
            "E",
            "IC",
            "J",
            "MAG",
            "MAJ",
            "MM",
            "SP",
            "SSC",
            "SSO",
            "SC",
            "SE",
            "XPN",
            "XSA",
            "XSN",
            "XSV"
          ]
        },
        "ko_synonym_filter": {
          "type": "synonym_graph",
          "synonyms_set": "__SYNONYMS_SET_ID__",
          "updateable": true
        }
      },
      "analyzer": {
        "ko_mall_analyzer": {
          "type": "custom",
          "tokenizer": "ko_nori_userdict_tokenizer",
          "filter": ["lowercase", "ko_pos_filter"]
        },
        "ko_mall_search_analyzer": {
          "type": "custom",
          "tokenizer": "ko_nori_userdict_tokenizer",
          "filter": ["lowercase", "ko_synonym_filter", "ko_pos_filter"]
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "id": {"type": "keyword"},
      "product_name": {
        "type": "text",
        "analyzer": "ko_mall_analyzer",
        "search_analyzer": "ko_mall_search_analyzer"
      },
      "category": {"type": "keyword"},
      "categoryId": {"type": "integer"},
      "description": {
        "type": "text",
        "analyzer": "ko_mall_analyzer",
        "search_analyzer": "ko_mall_search_analyzer"
      },
      "price": {"type": "integer"},
      "product_vector": {
        "type": "dense_vector",
        "dims": __DIMS__,
        "index": true,
        "similarity": "cosine"
      }
    }
  }
}
